<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Final Transcript Student</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 40px;
      color: #000;
    }

    h2 {
      text-align: center;
      margin-bottom: 30px;
      text-transform: uppercase;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 30px;
    }

    th,
    td {
      border: 1px solid #ccc;
      padding: 10px;
      text-align: left;
      font-size:
        14px;
    }

    th {
      background-color: rgb(167, 38, 179);
      text-align: center;
      font-weight: bold;
      color: white;
    }

    .row-alt {
      background-color: #fafafa;
    }

    .highlight-blue {
      font-weight: bold;
      background-color: #e6f2ff;
    }

    .highlight-light {
      background-color: #f9f9f9;
    }

    .footer,
    .generated {
      text-align: center;
      margin-top: 20px;
      font-size: 13px;
      color: #555;
    }

    .status-pass {
      color: green;
      font-weight: bold;
    }

    .status-fail {
      color:
        red;
      font-weight: bold;
    }

    .final-decision {
      background-color: thistle;
      color: black;
      font-weight: 600;
    }
  </style>
</head>

<body>

  <h2>FINAL TRANSCRIPT<br />STUDENT</h2>

  <table>
    <thead>
      <tr>
        <th colspan="3">Column</th>
        <th>Title</th>
        <th>Score</th>
        <th>Status</th>
      </tr>
    </thead>
    {{#each results}}
    <tbody>
      <tr>
        <td colspan="3">Block</td>
        <td>{{block_id.name}}</td>
        <td>{{total_mark}}</td>
        <td class="status-pass">{{block_result}}</td>
      </tr>
      {{#each subject_results}}
      <tr>
        <td></td>
        <td>Subject</td>
        <td></td>
        <td>{{subject_id.name}} - {{subject_id.subject_code}}</td>
        <td>{{total_mark}}</td>
        <td class="status-fail">{{subject_result}}</td>
      </tr>
      {{#each test_results}}
      <tr>
        <td colspan="2"></td>
        <td>Test</td>
        <td>{{test_id.name}}</td>
        <td>{{average_mark}}</td>
        <td class="status-pass">{{test_result}}</td>
      </tr>

      {{/each}}
      {{/each}}

      {{/each}}
      <tr class="final-decision">
        <td colspan="5">Final Transcript Decision</td>
        <td class="status-pass">{{overall_result}}</td>
      </tr>
    </tbody>
  </table>

  <div class="generated">
    Generated at:
    {{updated_at}}
  </div>

  <div class="footer">
    Profesional Certification
  </div>

</body>

</html>